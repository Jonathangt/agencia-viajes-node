extends ./layout/index
block contenido
    main(class="container mt-5")
        div(class="row")
            include ./layout/testimoniales

            div(class="col-md-12")
                h2(class="text-center") Agrega un Testimonial
                if(errores)
                    each error in errores
                        div(class="alert alert-danger text-center")=error.mensaje

        div(class="row justify-content-center")
            div(class="col-md-8")
                form(action="/testimoniales" method="post")
                    div(class="form-group")
                        label(for='nombre') Name
                        input#nombre(class="form-control" type='text', placeholder='Name', name="nombre", value=nombre)
                    div(class="form-group")
                        label(for='correo') Email
                        input#correo(class="form-control" type='email', placeholder='Email', name="correo", value=correo)
                    div(class="form-group")
                        label(for='mensaje') Message
                        textarea#mensaje(class="form-control" name="mensaje", rows=3, placeholder="Message")=mensaje
                    input(class="btn btn-success btn-block" type="submit")